            <directory>${project.releasedir}</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>updater.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}${file.separator}core${file.separator}installer${file.separator}linux</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
